@using JetMedicalWebApp.Entities.EntityDto
@using JetMedicalWebApp.Common
@model JetMedicalWebApp.Models.PartialViewModel

@{
    NewsCategoryDto newsCategory = (NewsCategoryDto)ViewData["categori"];
}
<style>
    .dropdown-toggle::after {
        display: inline-block;
        margin-left: .255em;
        vertical-align: .255em;
        content: "";
        border-top: .3em solid;
        border-right: .3em solid transparent;
        border-bottom: 0;
        border-left: .3em solid transparent;
    }

    .dropdown-menu {
        width: 100%;
    }

    .dropdown-item {
        padding: 15px 20px;
        border: 1px solid #E9E9E9;
        border-top: none;
        display: block;
        width: 100%;
        clear: both;
        font-weight: 400;
        color: #8d8d8d;
        text-align: inherit;
        white-space: nowrap;
        background-color: transparent;
    }
    .dropdown a {
        color: #8d8d8d;
    }
    .active_mn {
        color: #72BF44 !important;
    }


    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .dropdown > .dropdown-toggle:active {
        /*Without this, clicking will make it sticky*/
        pointer-events: none;
    }
</style>
<div class="menu_gioithieu">

    <ul class="to-left-ul">

        <li class="menu__item to-left">
            <a href="/chuyen-khoa/@(Utilities.urlConvert(Utilities.VnConcert(newsCategory.name).ToLower()) + "_ck_" + newsCategory.id)/gioi-thieu"
               class="menu__link @if ((int)ViewBag.categoriId == 1) { <text>active_mn</text>}">
                Giới thiệu
            </a>
        </li>


        <li class="menu__item to-left">
            <a href="/chuyen-khoa/@(Utilities.urlConvert(Utilities.VnConcert(newsCategory.name).ToLower()) + "_ck_" + newsCategory.id)/doi-ngu-bac-si"
               class="menu__link @if ((int)ViewBag.categoriId == 1) { <text>active_mn</text>}">
                Đội ngũ bác sĩ
            </a>
        </li>



        <li class="menu__item to-left">
            <a href="/chuyen-khoa/@(Utilities.urlConvert(Utilities.VnConcert(newsCategory.name).ToLower()) + "_ck_" + newsCategory.id)/dich-vu"
               class="menu__link @if ((int)ViewBag.categoriId == 1) { <text>active_mn</text>}">
               Dịch vụ
            </a>
        </li>


        <li class="menu__item to-left">
            <a href="/chuyen-khoa/@(Utilities.urlConvert(Utilities.VnConcert(newsCategory.name).ToLower()) + "_ck_" + newsCategory.id)/trang-thiet-bi"
               class="menu__link @if ((int)ViewBag.categoriId == 1) { <text>active_mn</text>}">
             Trang thiết bị
            </a>
        </li>



        <li class="menu__item to-left">
            <a href="/chuyen-khoa/@(Utilities.urlConvert(Utilities.VnConcert(newsCategory.name).ToLower()) + "_ck_" + newsCategory.id)/hoi-dap-chuyen-khoa"
               class="menu__link @if ((int)ViewBag.categoriId == 1) { <text>active_mn</text>}">
