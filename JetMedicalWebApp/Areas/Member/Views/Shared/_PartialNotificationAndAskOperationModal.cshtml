<script>
    function showNotificationAndAskModal(title, message) {
        $("#notificationAndAskOperationModalLabel").text(title);
        $("#notificationAndAskOperationModalContent").html(message);

        $('#notificationAndAskOperationModal').modal({
            "show": true
        });
    }
</script>

<div class="modal fade" id="notificationAndAskOperationModal" tabindex="-1" role="dialog" aria-labelledby="notificationAndAskOperationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header vd_bg-blue vd_white">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
                <h4 class="modal-title" id="notificationAndAskOperationModalLabel">@Html.Raw("Thông báo")</h4>
            </div>
            <div class="modal-body">
                <p id="notificationAndAskOperationModalContent"></p>
            </div>
            <div class="modal-footer background-login">
                <button type="button" class="btn vd_btn vd_bg-green" name="btnAddNew"><i class="append-icon fa fa-fw fa-plus"></i>@Html.Raw("Thêm mới")</button>
                <button type="button" class="btn vd_btn vd_bg-grey" name="btnTroVeDanhSach"><i class="append-icon fa fa-fw fa-arrow-left"></i>@Html.Raw("Trở về danh sách")</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
