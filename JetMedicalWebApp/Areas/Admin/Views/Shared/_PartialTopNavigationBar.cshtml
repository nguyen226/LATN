@model JetMedicalWebApp.Areas.Admin.Models.TopNavigationModels
@using JetMedicalWebApp.Common

<script>
    $(document).ready(function () {
        $('#btnDoiMatKhau').off('click').on('click', function () {
            $('#formDoiMatKhau')[0].reset();
            $('#doiMatKhauModal').modal('show');
        })
    })
</script>
<header class="header-1" id="header">
    <div class="vd_top-menu-wrapper">
        <div class="container ">
            <div class="vd_top-nav vd_nav-width  ">
                <div class="vd_panel-header">
                    <div class="logo">
                        <a href="/"><img alt="logo" src="@(!string.IsNullOrEmpty(Model.Logo) ? Url.Content(Model.Logo ) : "Content/Website/Assets/images/logo.svg")"></a>
                    </div>
                    <!-- logo -->
                    <div class="vd_panel-menu  hidden-sm hidden-xs" data-intro="<strong>Minimize Left Navigation</strong><br/>Toggle navigation size to medium or small size. You can set both button or one button only. See full option at documentation." data-step=1>
                        <span class="nav-medium-button menu" data-toggle="tooltip" data-placement="bottom" data-original-title="" data-action="nav-left-medium">
                            <i class="fa fa-bars"></i>
                        </span>
                    </div>
                    <div class="vd_panel-menu left-pos visible-sm visible-xs">
                        <span class="menu" data-action="toggle-navbar-left">
                            <i class="fa fa-ellipsis-v"></i>
                        </span>
                    </div>
                    <div class="vd_panel-menu visible-sm visible-xs">
                        <span class="menu visible-xs" data-action="submenu">
                            <i class="fa fa-bars"></i>
                        </span>
                        <span class="menu visible-sm visible-xs" data-action="toggle-navbar-right">
                            <i class="fa fa-comments"></i>
                        </span>
                    </div>
                    <!-- vd_panel-menu -->
                </div>
                <!-- vd_panel-header -->
            </div>
            <div class="vd_container">
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <div class="vd_mega-menu-wrapper">
                            <div class="vd_mega-menu pull-right">
                                <ul class="mega-ul">
                                    <li id="top-menu-profile" class="profile mega-li">
                                        <a href="#" class="mega-link" data-action="click-trigger">
                                            <span class="mega-image">
                                                <img src="@if (Model.User != null && !string.IsNullOrEmpty(Model.User.Avartar)) { <text>@Url.Content(Model.User.Avartar)</text>} else { <text>@Url.Content("~/Content/theme/img/avatar/avatar.jpg")</text>}" alt="Avatar" />
                                            </span>
                                            <span class="mega-name">@Html.Raw(Model.User != null ? Model.User.HoTen : string.Empty)<i class="fa fa-caret-down fa-fw"></i></span>
                                        </a>
                                        <div class="vd_mega-menu-content  width-xs-2  left-xs left-sm" data-action="click-target">
                                            <div class="child-menu">
                                                <div class="content-list content-menu">
                                                    <ul class="list-wrapper pd-lr-10">
                                                        <li> <a href="@Url.Action("XemChiTiet", "Users", new { area = "Admin" })?userId=@(Request.Cookies.Get(CommonConstants.CookieUserID) != null ? Request.Cookies.Get(CommonConstants.CookieUserID).Value : "")"> <div class="menu-icon"><i class="fa fa-user"></i></div> <div class="menu-text">Thông tin</div> </a> </li>
                                                        <li> <a href="#" id="btnDoiMatKhau"> <div class="menu-icon"><i class="fa fa-key"></i></div> <div class="menu-text">Đổi mật khẩu</div> </a> </li>
                                                        <li>
                                                            @using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { area = "Admin", id = "logoutForm" }))
                                                            {
                                                                @Html.AntiForgeryToken()
                                                                <a href="javascript:document.getElementById('logoutForm').submit()"> <div class="menu-icon"><i class="fa fa-sign-out"></i></div>  <div class="menu-text">Đăng xuất</div> </a>
                                                            }
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

@Html.Partial("_PartialDoiMatKhauModal")
