@model JetMedicalWebApp.Areas.Admin.Models.NhanTuVanViewModels
@{
    ViewBag.Title = "Nhận tư vấn";
    Layout = "~/Areas/Admin/Views/Shared/_SnailSoft.cshtml";
}

