<script type="text/javascript" charset="utf-8">
    var selectedDataRow = null;
    var table;
    var dataListId = [];

    let userId ='@Model.UsersID';
    let suaHeThong=@if (Model.Menu_GroupPermission.SystemEdit == true) { <text>true</text>} else { <text>false</text>};
    let suaCaNhan=@if (Model.Menu_GroupPermission.PersonalEdit == true) { <text>true</text>} else { <text>false</text>};
    let xemHeThong=@if (Model.Menu_GroupPermission.SystemView == true) { <text>true</text>} else { <text>false</text>};
    let xemCaNhan=@if (Model.Menu_GroupPermission.PersonalView == true) { <text>true</text>} else { <text>false</text>};
    let xoaHeThong=@if (Model.Menu_GroupPermission.SystemDelete == true) { <text>true</text>} else { <text>false</text>};
    let xoaCaNhan=@if (Model.Menu_GroupPermission.PersonalDelete == true) { <text>true</text>} else { <text>false</text>};

    $(document).ready(function () {
        let resizeObserver = new ResizeObserver(() => {
            if (typeof (table) !== 'undefined') {
                table.columns.adjust();
            }
        });
        resizeObserver.observe($('#vdContentContainer')[0]);

        $('.select2-local').select2();
        $('.datepicker').datepicker(initialDatepickerOption());

        let selectedFields = "UserID, MA_BN, MA_LK, HO_TEN, STRNGAY_VAO, NGAY_VAO, STRNGAY_RA, NGAY_RA, STRNGAY_TAI_KHAM, NGAY_TAI_KHAM, MA_BENH, TEN_BENH, CreatedUserID";

        var datatableOption = initialDatatableOption();
        datatableOption.ajax.url = '@Url.Action("GetList", "XML1", new { area = "Admin" })';
        datatableOption.ajax.data = {
            selectedFields: function () {
                return selectedFields;
            },
            stringFilter: function () {
                let stringFilter = '';

                if (!isNullOrEmpty($('#quickSearchMaBN').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(MA_BN LIKE N'%" + $('#quickSearchMaBN').val().trim() + "%')";
                }

                if (!isNullOrEmpty($('#quickSearchMaLK').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(MA_LK LIKE N'%" + $('#quickSearchMaLK').val().trim() + "%')";
                }

                if (!isNullOrEmpty($('#quickSearchTenBN').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(HO_TEN LIKE N'%" + $('#quickSearchTenBN').val().trim() + "%')";
                }

                if (!isNullOrEmpty($('#quickSearchMaBenh').val())) {
                    var strTemp = $('#quickSearchMaBenh').val().split(';');

                    var tempStringFilter = '';
                    $.each(strTemp, function(i, item) {
                        if (!isNullOrEmpty(tempStringFilter)) {
                            tempStringFilter += ' OR ';
                        }
                        tempStringFilter += "MA_BENH LIKE N'" + item + "'";
                    });

                    if (!isNullOrEmpty(tempStringFilter)) {
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(" + tempStringFilter + ")";
                    }
                }

                if (!isNullOrEmpty($('#quickSearchTenBenh').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(TEN_BENH LIKE N'%" + $('#quickSearchTenBenh').val().trim() + "%')";
                }

                if (!isNullOrEmpty($('#quickSearchMaBenhKem').val())) {
                    var strTemp = $('#quickSearchMaBenhKem').val().split(';');

                    var tempStringFilter = '';
                    $.each(strTemp, function(i, item) {
                        if (!isNullOrEmpty(tempStringFilter)) {
                            tempStringFilter += ' OR ';
                        }
                        tempStringFilter += "MA_BENHKHAC LIKE N'" + item + "'";
                    });

                    if (!isNullOrEmpty(tempStringFilter)) {
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(" + tempStringFilter + ")";
                    }
                }

                if (!isNullOrEmptySelect2($('#nhomMau').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(BloodTypeID = '" + $('#nhomMau').val() + "')";
                }


                if (!isNullOrEmptySelect2($('#tinh').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(ProvinceID = '" + $('#tinh').val() + "')";
                }

                if (!isNullOrEmptySelect2($('#huyen').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(DistrictID = '" + $('#huyen').val() + "')";
                }

                if (!isNullOrEmptySelect2($('#ketQuaDieuTri').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(KET_QUA_DTRI = '" + $('#ketQuaDieuTri').val() + "')";
                }

                if (!isNullOrEmptySelect2($('#khoaDieuTri').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(MA_KHOA = '" + $('#khoaDieuTri').val() + "')";
                }

                if (!isNullOrEmpty($('#quickSearchNgayVao').val())) {
                    var tempNgay = $('#quickSearchNgayVao').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_VAO >= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + "')";
                    }
                }


                if (!isNullOrEmpty($('#quickSearchDenNgayVao').val())) {
                    var tempNgay = $('#quickSearchDenNgayVao').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_VAO <= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + " 23:59:59')";
                    }
                }

                if (!isNullOrEmpty($('#quickSearchNgayRa').val())) {
                    var tempNgay = $('#quickSearchNgayRa').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_RA >= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + "')";
                    }
                }

                if (!isNullOrEmpty($('#quickSearchDenNgayRa').val())) {
                    var tempNgay = $('#quickSearchDenNgayRa').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_RA <= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + " 23:59:59')";
                    }
                }



                if (!isNullOrEmpty($('#quickSearchNgayTaiKham').val())) {
                    var tempNgay = $('#quickSearchNgayTaiKham').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_TAI_KHAM >= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + "')";
                    }
                }
                if (!isNullOrEmpty($('#quickSearchDenNgayTaiKham').val())) {
                    var tempNgay = $('#quickSearchDenNgayTaiKham').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_TAI_KHAM <= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + " 23:59:59')";
                    }
                }

                if (!isNullOrEmpty($('#quickSearchNgaySinh').val())) {

                    var tempNgay = $('#quickSearchNgaySinh').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_SINH >= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + "')";
                    }
                }

                if (!isNullOrEmpty($('#quickSearchDenNgaySinh').val())) {
                    var tempNgay = $('#quickSearchDenNgaySinh').val().split('/');

                    if(tempNgay.length == 3){
                        if (!isNullOrEmpty(stringFilter)) {
                            stringFilter += ' AND ';
                        }

                        stringFilter += "(NGAY_SINH <= '" + tempNgay[2] + '-' + tempNgay[1] + '-' + tempNgay[0] + " 23:59:59')";
                    }
                }

                if (!isNullOrEmptySelect2($('#congTy').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(CongTyID = '" + $('#congTy').val() + "')";
                }


                if (!isNullOrEmptySelect2($('#loaiDangKy').val())) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(IsMobile = '" + $('#loaiDangKy').val() + "')";
                }



                if ($('#coEmail').is(':checked') == true) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(EmailID IS NOT NULL AND EmailID <> '')";
                }



                if ($('#coSDT').is(':checked') == true) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }

                    stringFilter += "(Phone IS NOT NULL AND Phone <> '')";
                }


                if (xemHeThong == false && (xemCaNhan == true)) {
                    if (!isNullOrEmpty(stringFilter)) {
                        stringFilter += ' AND ';
                    }
                    stringFilter += 'CreatedUserID =' + userId;
                }

                return stringFilter;
            }
        };

        datatableOption.drawCallback = function (settings) {
            table.columns.adjust();
        };

        datatableOption.initComplete = function () {
            this.api().columns().every(function (index) {
                var headerName = $(this.header()).text();
                var column = this;
                if (index == 0) {
                    $(column.header()).html('<div class="controls"><div class="vd_checkbox checkbox-success">\
                                <input type="checkbox" id="checkbox-select-all">\
                                <label for="checkbox-select-all"></label>\
                            </div></div>');
                }
                table.columns.adjust();
            });

            $('#checkbox-select-all').off('change').on('change', function () {
                $('#dtTable tbody input:checkbox[name="checkboxSelected"]').prop('checked', this.checked);
            });
        };

        datatableOption.order = [[1, "DESC"]];
        datatableOption.columnDefs = [
            {
                "targets": "_all",
            },
            {
                "targets": [0],
                className: 'dt-body-center',
                "searchable": false,
                "orderable": false
            },
            {
                "targets": [9],
                className: 'dt-body-center menu-action',
                "orderable": false,
                "searchable": false,
            }
        ];

        datatableOption.columns = [
            {
                "width": "20px", "data": "UserID", "name": "UserID", "autoWidth": true,
                "render": function (data, type, full, meta) {
                    return '<div class="controls"><div class="vd_checkbox checkbox-success">\
                                <input type="checkbox" id="checkboxSelected_' + full.UserID + '_' + full.MA_LK + '" name="checkboxSelected">\
                                <label for="checkboxSelected_' + full.UserID + '_' + full.MA_LK + '"></label>\
                            </div></div>';
                }
            },
            { "data": "MA_BN", "name": "MA_BN", "autoWidth": true, "title": "Mã bệnh nhân" },
            { "data": "MA_LK", "name": "MA_LK", "autoWidth": true, "title": "Mã LK" },
            { "data": "HO_TEN", "name": "HO_TEN", "autoWidth": true, "title": "Họ và tên" },
            { "data": "STRNGAY_VAO", "name": "NGAY_VAO", "autoWidth": true, "title": "Ngày khám" },
            { "data": "STRNGAY_RA", "name": "NGAY_RA", "autoWidth": true, "title": "Ngày kết thúc" },
            { "data": "STRNGAY_TAI_KHAM", "name": "NGAY_TAI_KHAM", "autoWidth": true, "title": "Ngày tái khám" },
            { "data": "MA_BENH", "name": "MA_BENH", "autoWidth": true, "title": "Mã bệnh" },
            { "data": "TEN_BENH", "name": "TEN_BENH", "autoWidth": true, "title": "Tên bệnh" ,
                "mRender": function (data, type, row, meta) {
                    return data.length > 50 ? data.substring(0,50) + '...' : data;
                }
            },
            {
                "data": "MA_LK", "mRender": function (data, type, row, meta) {
                    let html = '';
                    if (xemHeThong == true || (xemCaNhan == true && row.CreatedUserID == userId)) {
                        html = '<div class="d-flex order-actions"><a data-original-title="edit" data-toggle="tooltip" data-placement="top" onclick=sua(this) href="#!" data-malk=' + row.MA_LK + ' data-mabn=' + row.MA_BN + '><i class="bx bxs-edit"></i> </a></div>';
                    }

                    return html;
                }, "title": "Sửa"
            },
        ]

        table = $('#dtTable').DataTable(datatableOption);

        $('#dtTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }

            selectedDataRow = table.row($(this)).data();
        });

        $("#btnRefreshData").click(function () {
            table.draw();
        });

        $('#btnAdd').click(function () {
            window.location.href = '@Url.Action("Update", "XML1", new { area = "Admin" })';
        });

        $('#btnDelete').click(function () {
            dataListId = [];
            dataListId = $(table.$('input:checkbox[name="checkboxSelected"]').map(function () {
                return $(this).prop("checked") ? table.rows($(this).closest('tr')).data()[0].MA_LK : null;
            })).toArray();

            if (dataListId.length > 0) {
                $('#confirmDeleteDataRowModal').modal('show');
            } else {
                notification("top right", "info", "fadeIn animated bx bx-info-circle", "", "Bạn chưa chọn dòng nào để xóa.");
            }
        });

        $('#btnExecuteDeleted').click(function (e) {
            e.preventDefault();

            if (dataListId.length > 0) {
                var data = { ids: dataListId };
                var url = "@Url.Action("DeleteByIds", "XML1", new { area = "Admin" })";

                sendDataToURL(url, data, true, null)
                .then(function (res) {
                    if (res) {
                        notification("top right", "error", "fadeIn animated bx bx-error", "", res);
                    }
                    else {
                        if (res == null) {
                            notification("top right", "error", "fadeIn animated bx bx-error", "", "Bạn không được phép thực hiện thao tác này");
                        }
                        else if (res == "") {
                            $('#confirmDeleteDataRowModal').modal('hide');
                            notification("top right", "success", "fadeIn animated bx bx-check-circle", "", "Xóa thành công");
                            resetCheckboxAndDatatable();
                        }
                    }
                });
            }
        });


        var dropdownlistSelect2CongTyOption = initialDropdownlistSelect2Option();
        dropdownlistSelect2CongTyOption.placeholder = "Vui lòng chọn công ty";
        dropdownlistSelect2CongTyOption.ajax = {
            type: "POST",
            url: '@Url.Action("Filter", "Company", new { area = "Admin" })',
            dataType: 'json',
            contentType: "application/json",
            delay: 250,
            data: function (params) {
                var selectedFields = 'CompanyID, ComName';
                var condition = params.term ? ' ComName.Contains(\\' + params.term + '\\)' : '';

                return JSON.stringify({
                    selectedFields: selectedFields,
                    stringFilter: condition,
                    sortCondition: 'ComName asc',
                    top: 10,
                });
            },
            processResults: function (res, params) {
                var data = $.map(res, function (item, i) {
                    return {
                        id: item.CompanyID,
                        text: item.ComName
                    }
                });
                data.unshift({
                    id: "-1",
                    text: "không chọn"
                })
                return {
                    results: data
                };
            },
            cache: true
        };

        $('#congTy').select2(dropdownlistSelect2CongTyOption);

        var dropdownlistSelect2TinhOption = initialDropdownlistSelect2Option();
        dropdownlistSelect2TinhOption.placeholder = "Vui lòng chọn Tỉnh";
        dropdownlistSelect2TinhOption.ajax = {
            type: "POST",
            url: '@Url.Action("Filter", "Province", new { area = "Admin" })',
            dataType: 'json',
            contentType: "application/json",
            delay: 250,
            data: function (params) {
                var selectedFields = 'ProvinceID, ProvinceName, IsActive';
                var condition = params.term ? ' ProvinceName.Contains(\\' + params.term + '\\) AND IsActive = True' : ' IsActive = True ';

                return JSON.stringify({
                    selectedFields: selectedFields,
                    stringFilter: condition,
                    sortCondition: 'ProvinceName asc',
                    top: 10,
                });
            },
            processResults: function (res, params) {
                var data = $.map(res, function (item, i) {
                    return {
                        id: item.ProvinceID,
                        text: item.ProvinceName
                    }
                });
                data.unshift({
                    id: "-1",
                    text: "không chọn"
                })
                return {
                    results: data
                };
            },
            cache: true
        };

        $('#tinh').select2(dropdownlistSelect2TinhOption);

        var dropdownlistSelect2HuyenOption = initialDropdownlistSelect2Option();
        dropdownlistSelect2HuyenOption.placeholder = "Vui lòng chọn huyện";
        dropdownlistSelect2HuyenOption.ajax = {
            type: "POST",
            url: '@Url.Action("Filter", "District", new { area = "Admin" })',
            dataType: 'json',
            contentType: "application/json",
            delay: 250,
            data: function (params) {
                var selectedFields = 'ProvinceID, DistrictID, DistrictName, IsActive';
                var condition = ' IsActive = True AND ProvinceID.Contains(\\' + $('#tinh').val() + '\\)';
                condition += params.term ? ' AND (DistrictName.Contains(\\' + params.term + '\\))' : '';
                return JSON.stringify({
                    selectedFields: selectedFields,
                    stringFilter: condition,
                    sortCondition: 'DistrictName asc',
                    top: 10,
                });
            },
            processResults: function (res, params) {
                var data = $.map(res, function (item, i) {
                    return {
                        id: item.DistrictID,
                        text: item.DistrictName
                    }
                });
                data.unshift({
                    id: "-1",
                    text: "không chọn"
                })
                return {
                    results: data
                };
            },
            cache: true
        };

        $('#huyen').select2(dropdownlistSelect2HuyenOption);

        var dropdownlistSelect2NhomMauOption = initialDropdownlistSelect2Option();
        dropdownlistSelect2NhomMauOption.placeholder = "Chọn nhóm máu";
        dropdownlistSelect2NhomMauOption.ajax = {
            type: "POST",
            url: '@Url.Action("Filter", "BloodType", new { area = "Admin" })',
            dataType: 'json',
            contentType: "application/json",
            delay: 250,
            data: function (params) {
                var selectedFields = 'BloodTypeID, BloodName';
                var condition = params.term ? ' BloodName.Contains(\\' + params.term + '\\)' : '';
                return JSON.stringify({
                    selectedFields: selectedFields,
                    stringFilter: condition,
                    sortCondition: 'BloodName asc',
                    top: 10,
                });
            },
            processResults: function (res, params) {
                var data = $.map(res, function (item, i) {
                    return {
                        id: item.BloodTypeID,
                        text: item.BloodName
                    }
                });
                data.unshift({
                    id: "-1",
                    text: "không chọn"
                })
                return {
                    results: data
                };
            },
            cache: true
        };

        $('#nhomMau').select2(dropdownlistSelect2NhomMauOption);

        var dropdownlistSelect2Option = initialDropdownlistSelect2Option();
        dropdownlistSelect2Option.placeholder = "Vui lòng chọn khoa";
        dropdownlistSelect2Option.ajax = {
            type: "POST",
            url: '@Url.Action("Filter", "Khoa", new { area = "Admin" })',
            dataType: 'json',
            contentType: "application/json",
            delay: 250,
            data: function (params) {
                var selectedFields = 'Id, Code, Name';
                var condition = params.term ? ' (Code.Contains(\\' + params.term.trim() + '\\) OR Name.Contains(\\' + params.term.trim() + '\\))' : '';

                return JSON.stringify({
                    selectedFields: selectedFields,
                    stringFilter: condition,
                    sortCondition: 'Code asc, Name asc',
                    top: 10,
                });
            },
            processResults: function (res, params) {
                var data = $.map(res, function (item, i) {
                    return {
                        id: item.Code,
                        text: item.Name
                    }
                });
                data.unshift({
                    id: "-1",
                    text: "không chọn"
                })
                return {
                    results: data
                };
            },
            cache: true
        };

        $('#khoaDieuTri').select2(dropdownlistSelect2Option);

        $('#quickSearchMaBN,  #quickSearchMaLK, #quickSearchTenBN, #quickSearchTenBenh, #quickSearchNgayVao, #quickSearchNgayRa, #quickSearchNgayTaiKham').keyup(function (e) {
            e.preventDefault();
            resetCheckboxAndDatatable();
        });

        $('#tinh').change(function (e) {
            e.preventDefault();
            if(isNullOrEmptySelect2($('#tinh').val())){
                $('#huyen').val(-1).trigger('change');
            }
            resetCheckboxAndDatatable();
        });

        $('#nhomMau, #tinh, #huyen, #ketQuaDieuTri, #khoaDieuTri, #congTy, #loaiDangKy').change(function (e) {
            e.preventDefault();
            resetCheckboxAndDatatable();
        });


        $('#coEmail, #coSDT').change(function () {
            resetCheckboxAndDatatable();
        });



        $('#quickSearchMaBenh').tagsInput({
            placeholder: 'Chọn mã bệnh',
            unique: true,
            clearText: true,
            delimiter: ';',
            errorMessage: 'Mã bệnh này đã tồn tại.',
            errorTitle: 'Lỗi',
            autocomplete: {
                source: function (request, response) {
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("Filter", "ICD10", new { area = "Admin" })',
                        dataType: 'json',
                        contentType: "application/json",
